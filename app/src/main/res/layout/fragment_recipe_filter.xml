<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fab_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:textColor="#030001"
                android:textSize="19dp"
                android:textStyle="bold" />

            <com.tylersuehr.chips.ChipsInputLayout
                android:id="@+id/ingredientsChipInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search for ingredients..."
                android:layout_marginStart="-9dp"
                android:layout_marginEnd="-9dp"
                app:hideKeyboardOnChipClick="false"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuisines"
                android:textColor="#030001"
                android:textSize="19dp"
                android:textStyle="bold" />

            <com.tylersuehr.chips.ChipsInputLayout
                android:id="@+id/cuisinesChipInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Filter a cuisine"
                android:layout_marginStart="-9dp"
                android:layout_marginEnd="-9dp"
                app:hideKeyboardOnChipClick="false"
                app:singleSelection="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tags"
                android:textColor="#030001"
                android:textSize="19dp"
                android:textStyle="bold" />

            <com.tylersuehr.chips.ChipsInputLayout
                android:id="@+id/tagsChipInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search for tags..."
                android:layout_marginStart="-9dp"
                android:layout_marginEnd="-9dp"
                app:hideKeyboardOnChipClick="false"
                app:singleSelection="true"
                />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_check_24"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="Confirm"
        android:layout_margin="4dp"
        app:backgroundTint="@color/colorPrimary"
        app:tint="#fff"
        android:id="@+id/confirmBtn"/>
</RelativeLayout>
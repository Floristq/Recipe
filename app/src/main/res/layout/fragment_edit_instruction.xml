<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Instruction">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/Instruction_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Edit Instruction"
        android:textSize="26sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Instruction_Edittext"
        android:layout_below = "@+id/Instruction_title"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        />

    <Button
        android:layout_below = "@+id/Instruction_Edittext"
        android:id="@+id/InstructionBtn"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:textSize="26sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:background="@drawable/custom_button"/>

</RelativeLayout>